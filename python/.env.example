# ============================================
# Trading Bot V2 - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ============================================
# AI/LLM API Keys (Required)
# ============================================
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-key-here
# ANTHROPIC_MODEL=claude-sonnet-4-20250514  # Optional: override default model

# ============================================
# Bybit Exchange API (Required)
# ============================================
# Get from: https://www.bybit.com/app/user/api-management
# Requires: Read, Trade, Wallet permissions
BYBIT_API_KEY=your-bybit-api-key
BYBIT_API_SECRET=your-bybit-api-secret
# BYBIT_TESTNET=false  # Set true for testnet

# ============================================
# TradingView (Session identifier only)
# ============================================
# Email is used to name session files, NOT for login
# Login is done manually via interactive browser
TRADINGVIEW_EMAIL=your-tradingview-email

# ============================================
# Telegram Bot (Required for notifications)
# ============================================
# Create bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id
TELEGRAM_AUTHORIZED_USERS=your-telegram-user-id

# ============================================
# Database Paths
# ============================================
# Main trading database (trades, cycles, runs, sessions)
TRADING_DB_PATH=./trading_bot/data/trading.db

# ============================================
# Backtest Configuration (Optional)
# ============================================
# BACKTEST_MAX_WORKERS=4  # Parallel image analysis
# BACKTEST_MAX_WORKERS_IMAGES=2
# BACKTEST_MAX_WORKERS_PROMPTS=2

# ============================================
# Security (Optional)
# ============================================
# SESSION_ENCRYPTION_KEY=your-encryption-key  # For encrypted session storage
# VNC_PASSWORD=your-vnc-password  # For browser debugging

# ============================================
# Server Settings
# ============================================
NODE_ENV=development
PORT=3000
# DISPLAY=:0  # For headless browser (set by system)
