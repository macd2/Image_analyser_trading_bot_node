# ===========================================
# Trading Bot - Unified Environment Configuration
# ===========================================
# Copy to .env.local for local development
# All settings for both Next.js dashboard AND Python bot
#
# For Railway deployment: Set these as environment variables in Railway dashboard

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Database mode: 'postgres' for Supabase/Railway, 'sqlite' for local development
DB_TYPE=sqlite

# PostgreSQL (for production - Supabase/Railway)
# DATABASE_URL=postgresql://user:pass@host:port/db

# SQLite paths (for local development - relative to project root)
# All data stored in single ./data/ folder
TRADING_DB_PATH=./data/trading.db
DATABASE_PATH=./data/backtests.db
ANALYSIS_DATABASE_PATH=./data/analysis_results.db

# ===========================================
# STORAGE CONFIGURATION
# ===========================================
# Storage mode: 'supabase' for cloud, 'local' for filesystem
STORAGE_TYPE=local

# Chart images path (relative to project root)
PYTHON_CHARTS_PATH=./data/charts

# Supabase Storage (for production)
# NEXT_PUBLIC_SUPABASE_URL=https://xxx.supabase.co
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
# SUPABASE_BUCKET_URL=https://xxx.supabase.co/storage/v1
# SUPABASE_BUCKET_NAME=chart_images

# ===========================================
# DASHBOARD SECURITY
# ===========================================
# Set this to protect dashboard with password (required for production!)
# Leave empty for local development
DASHBOARD_PASSWORD=

# ===========================================
# EXCHANGE API (Bybit)
# ===========================================
BYBIT_API_KEY=your-api-key
BYBIT_API_SECRET=your-api-secret
BYBIT_TESTNET=false

# ===========================================
# AI/LLM API KEYS
# ===========================================
OPENAI_API_KEY=sk-proj-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
# GROQ_API_KEY=gsk_your-groq-key

# ===========================================
# TRADINGVIEW (for chart capture)
# ===========================================
TRADINGVIEW_EMAIL=your-tradingview-email
# Note: Password is entered interactively, not stored in env
# Target chart URL is configured in python/config.yaml

# ===========================================
# TELEGRAM NOTIFICATIONS
# ===========================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id
TELEGRAM_AUTHORIZED_USERS=your-user-id

# ===========================================
# BROWSER/VNC (optional, for debugging)
# ===========================================
# VNC_PASSWORD=your-vnc-password

# ===========================================
# SERVER
# ===========================================
PORT=3000
NODE_ENV=development
# SESSION_ENCRYPTION_KEY=your-session-key

# ===========================================
# PYTHON CONFIG
# ===========================================
PYTHON_CONFIG_PATH=./python/config.yaml
